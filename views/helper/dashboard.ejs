<%- include('../partials/header') %>

    <div class="container my-5">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2><i class="bi bi-speedometer2 me-2"></i>Helper Dashboard</h2>
                <p class="text-muted">Manage your bookings and availability</p>
            </div>
            <div class="col-md-4 text-end">
                <!-- Availability Toggle -->
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <small class="text-muted">Status</small>
                                <h6 class="mb-0" id="statusText">Offline</h6>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="availabilityToggle"
                                    style="width: 3rem; height: 1.5rem;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-calendar-check fs-1 text-primary mb-2"></i>
                        <h3 class="mb-0" id="totalBookings">0</h3>
                        <small class="text-muted">Total Jobs</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-clock-history fs-1 text-warning mb-2"></i>
                        <h3 class="mb-0" id="pendingBookings">0</h3>
                        <small class="text-muted">Pending</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-check-circle fs-1 text-success mb-2"></i>
                        <h3 class="mb-0" id="completedBookings">0</h3>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-currency-rupee fs-1 text-info mb-2"></i>
                        <h3 class="mb-0" id="totalEarnings">₹0</h3>
                        <small class="text-muted">Earnings</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Incoming Booking Requests -->
        <div class="card mb-4" id="incomingRequestsCard" style="display: none;">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-bell-fill me-2"></i>Incoming Request</h5>
            </div>
            <div class="card-body" id="incomingRequestContent">
                <!-- Dynamic content -->
            </div>
        </div>

        <!-- Current Booking -->
        <div class="card mb-4" id="currentBookingCard" style="display: none;">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-briefcase-fill me-2"></i>Current Job</h5>
            </div>
            <div class="card-body" id="currentBookingContent">
                <!-- Dynamic content -->
            </div>
        </div>

        <!-- Recent Bookings -->
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Recent Bookings</h5>
            </div>
            <div class="card-body">
                <div id="recentBookingsContainer">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let socket;
        let currentRequest = null;
        let countdownTimer = null;

        // Initialize Socket.IO
        socket = io();
        const helperId = '<%= user?._id %>';
        socket.emit('join', { userId: helperId, role: 'helper' });

        // Socket event listeners
        socket.on('booking:new', (data) => {
            console.log('New booking request:', data);
            showIncomingRequest(data);
            startCountdown(30);
        });

        socket.on('booking:timeout', (data) => {
            console.log('Booking timeout:', data);
            hideIncomingRequest();
        });

        socket.on('booking:status', (data) => {
            console.log('Booking status update:', data);
            updateBookingStatus(data);
        });

        // Availability toggle
        document.getElementById('availabilityToggle').addEventListener('change', async (e) => {
            const availability = e.target.checked;

            try {
                const response = await fetch('/api/helpers/availability', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    },
                    body: JSON.stringify({ availability })
                });

                if (response.ok) {
                    document.getElementById('statusText').textContent = availability ? 'Online' : 'Offline';
                    document.getElementById('statusText').className = availability ? 'text-success mb-0' : 'text-muted mb-0';

                    // Emit helper connect/disconnect
                    if (availability) {
                        socket.emit('helper:connect', { helperId });
                    } else {
                        socket.emit('helper:disconnect', { helperId });
                    }
                }
            } catch (error) {
                console.error('Error updating availability:', error);
                e.target.checked = !availability;
            }
        });

        // Show incoming request
        function showIncomingRequest(data) {
            currentRequest = data;
            const card = document.getElementById('incomingRequestsCard');
            const content = document.getElementById('incomingRequestContent');

            content.innerHTML = `
        <div class="row">
            <div class="col-md-8">
                <h5>${data.booking.serviceId.name}</h5>
                <p class="mb-2"><i class="bi bi-person me-2"></i>${data.booking.userId.name}</p>
                <p class="mb-2"><i class="bi bi-geo-alt me-2"></i>${data.booking.location.address.street}, ${data.booking.location.address.city}</p>
                <p class="mb-2"><i class="bi bi-clock me-2"></i>Estimated: ${data.booking.serviceId.estimatedDuration} min</p>
                <p class="mb-0"><i class="bi bi-currency-rupee me-2"></i>₹${data.booking.serviceId.basePrice}</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="mb-3">
                    <div class="circular-progress mb-2"></div>
                    <h4 id="countdown">30</h4>
                    <small class="text-muted">seconds to respond</small>
                </div>
                <button class="btn btn-success w-100 mb-2" onclick="acceptBooking('${data.booking._id}')">
                    <i class="bi bi-check-circle me-2"></i>Accept
                </button>
                <button class="btn btn-outline-danger w-100" onclick="rejectBooking('${data.booking._id}')">
                    <i class="bi bi-x-circle me-2"></i>Reject
                </button>
            </div>
        </div>
    `;

            card.style.display = 'block';
        }

        // Hide incoming request
        function hideIncomingRequest() {
            document.getElementById('incomingRequestsCard').style.display = 'none';
            stopCountdown();
            currentRequest = null;
        }

        // Start countdown
        function startCountdown(seconds) {
            let timeLeft = seconds;
            const countdownEl = document.getElementById('countdown');

            countdownTimer = setInterval(() => {
                timeLeft--;
                if (countdownEl) {
                    countdownEl.textContent = timeLeft;
                }

                if (timeLeft <= 0) {
                    stopCountdown();
                    hideIncomingRequest();
                }
            }, 1000);
        }

        // Stop countdown
        function stopCountdown() {
            if (countdownTimer) {
                clearInterval(countdownTimer);
                countdownTimer = null;
            }
        }

        // Accept booking
        async function acceptBooking(bookingId) {
            try {
                const response = await fetch(`/api/helpers/bookings/${bookingId}/accept`, {
                    method: 'PUT',
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    }
                });

                if (response.ok) {
                    hideIncomingRequest();
                    socket.emit('booking:accept', { bookingId, helperId });
                    loadBookings();
                    alert('Booking accepted!');
                }
            } catch (error) {
                console.error('Error accepting booking:', error);
            }
        }

        // Reject booking
        async function rejectBooking(bookingId) {
            const reason = prompt('Reason for rejection (optional):');

            try {
                const response = await fetch(`/api/helpers/bookings/${bookingId}/reject`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    },
                    body: JSON.stringify({ reason: reason || 'Helper rejected' })
                });

                if (response.ok) {
                    hideIncomingRequest();
                    socket.emit('booking:reject', { bookingId, helperId, reason });
                    alert('Booking rejected');
                }
            } catch (error) {
                console.error('Error rejecting booking:', error);
            }
        }

        // Load bookings
        async function loadBookings() {
            try {
                const response = await fetch('/api/helpers/bookings', {
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    }
                });

                const data = await response.json();

                if (response.ok) {
                    displayBookings(data.bookings);
                    updateStats(data.bookings);
                }
            } catch (error) {
                console.error('Error loading bookings:', error);
            }
        }

        // Display bookings
        function displayBookings(bookings) {
            const container = document.getElementById('recentBookingsContainer');

            if (bookings.length === 0) {
                container.innerHTML = '<p class="text-center text-muted">No bookings yet</p>';
                return;
            }

            container.innerHTML = '';

            bookings.slice(0, 5).forEach(booking => {
                const statusBadge = getStatusBadge(booking.status);
                const card = `
            <div class="card mb-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <h6 class="mb-1">${booking.serviceId.name}</h6>
                            <small class="text-muted">${new Date(booking.createdAt).toLocaleDateString()}</small>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">User</small>
                            <p class="mb-0">${booking.userId.name}</p>
                        </div>
                        <div class="col-md-3">
                            ${statusBadge}
                        </div>
                        <div class="col-md-2 text-end">
                            <a href="/helper/booking/${booking._id}" class="btn btn-sm btn-outline-primary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        `;
                container.innerHTML += card;
            });
        }

        // Update stats
        function updateStats(bookings) {
            document.getElementById('totalBookings').textContent = bookings.length;
            document.getElementById('pendingBookings').textContent = bookings.filter(b => b.status === 'assigned').length;
            document.getElementById('completedBookings').textContent = bookings.filter(b => b.status === 'completed').length;

            const earnings = bookings
                .filter(b => b.status === 'completed')
                .reduce((sum, b) => sum + (b.serviceId.basePrice || 0), 0);
            document.getElementById('totalEarnings').textContent = `₹${earnings}`;
        }

        // Get status badge
        function getStatusBadge(status) {
            const badges = {
                'assigned': '<span class="badge bg-info">Assigned</span>',
                'accepted': '<span class="badge bg-primary">Accepted</span>',
                'in-progress': '<span class="badge bg-warning">In Progress</span>',
                'completed': '<span class="badge bg-success">Completed</span>',
                'cancelled': '<span class="badge bg-danger">Cancelled</span>'
            };
            return badges[status] || '<span class="badge bg-secondary">' + status + '</span>';
        }

        // Update booking status
        function updateBookingStatus(data) {
            loadBookings();
        }

        // Load on page load
        document.addEventListener('DOMContentLoaded', loadBookings);
    </script>

    <%- include('../partials/footer') %>