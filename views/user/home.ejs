<%- include('../partials/header') %>

    <div class="container my-5">
        <!-- Hero Section -->
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Get Help in <span style="color: var(--primary-color);">15
                        Minutes</span></h1>
                <p class="lead text-muted mb-4">Professional household services at your doorstep. Plumbing, electrical,
                    cleaning, and more!</p>
                <a href="/user/booking" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-calendar-check me-2"></i>Book Now
                </a>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?w=600" alt="Services"
                    class="img-fluid rounded shadow">
            </div>
        </div>

        <!-- Services Section -->
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Our Services</h2>
            <p class="text-muted">Choose from our wide range of professional services</p>
        </div>

        <div class="row g-4" id="servicesContainer">
            <div class="col-12 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <!-- How It Works -->
        <div class="mt-5 pt-5">
            <h2 class="text-center fw-bold mb-5">How It Works</h2>
            <div class="row g-4">
                <div class="col-md-4 text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 80px; height: 80px;">
                        <i class="bi bi-search fs-1 text-primary"></i>
                    </div>
                    <h5>Choose Service</h5>
                    <p class="text-muted">Select the service you need from our catalog</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 80px; height: 80px;">
                        <i class="bi bi-person-check fs-1 text-primary"></i>
                    </div>
                    <h5>Get Matched</h5>
                    <p class="text-muted">We assign the nearest available helper</p>
                </div>
                <div class="col-md-4 text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 80px; height: 80px;">
                        <i class="bi bi-check-circle fs-1 text-primary"></i>
                    </div>
                    <h5>Service Done</h5>
                    <p class="text-muted">Professional service delivered to your door</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Fetch and display services
        async function loadServices() {
            try {
                const response = await fetch('/api/services');
                const data = await response.json();

                const container = document.getElementById('servicesContainer');
                container.innerHTML = '';

                data.services.forEach(service => {
                    const serviceCard = `
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-${getServiceIcon(service.category)} fs-3 text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">${service.name}</h5>
                                    <small class="text-muted">${service.category}</small>
                                </div>
                            </div>
                            <p class="card-text text-muted">${service.description}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-primary">â‚¹${service.basePrice}</span>
                                <span class="text-muted"><i class="bi bi-clock me-1"></i>${service.estimatedDuration} min</span>
                            </div>
                            <a href="/user/booking?service=${service._id}" class="btn btn-outline-primary w-100 mt-3">
                                Book Now
                            </a>
                        </div>
                    </div>
                </div>
            `;
                    container.innerHTML += serviceCard;
                });
            } catch (error) {
                console.error('Error loading services:', error);
                document.getElementById('servicesContainer').innerHTML = `
            <div class="col-12 text-center">
                <p class="text-danger">Failed to load services. Please try again later.</p>
            </div>
        `;
            }
        }

        function getServiceIcon(category) {
            const icons = {
                'Cleaning': 'brush',
                'Plumbing': 'droplet',
                'Electrical': 'lightning',
                'Gardening': 'flower1',
                'Cooking': 'egg-fried',
                'Carpentry': 'hammer'
            };
            return icons[category] || 'tools';
        }

        // Load services on page load
        document.addEventListener('DOMContentLoaded', loadServices);
    </script>

    <%- include('../partials/footer') %>